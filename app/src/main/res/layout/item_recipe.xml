<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/nameTextView"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Calories"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/caloriesTextView"
                android:layout_weight="1" />
            <TextView
                android:text="Servings"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/servingsTextView"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:text="Protein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proteinTextView" />
        <TextView
            android:text="Carbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carbsTextView" />
        <TextView
            android:text="Fats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fatTextView" />
        <TextView
            android:text="Prep Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prepTextView" />
        <TextView
            android:text="Cook Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cookTextView" />
        <TextView
            android:text="Writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/writerTextView" />
        <TextView
            android:text="Measurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/measurementTextView" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ingredientsListView" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/instructionsListView" />

    </LinearLayout>

</LinearLayout>